<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.SalesForecast"
             BackgroundColor="#FFFBE9">


    <Grid RowDefinitions="Auto, *" ColumnDefinitions="*">
        
        <!-- title -->
        <Grid BackgroundColor="#D18E2D" Padding="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <!-- app title -->
            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">

                <Label Text="App Name"
                       FontSize="20"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Frame BackgroundColor="#E6B655"
                       Padding="5,2"
                       CornerRadius="20"
                       HasShadow="False"
                       Margin="0,5,0,0">
                    <Label Text="Sales Forecast"
                           FontSize="14"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                </Frame>
            </VerticalStackLayout>
        </Grid>

        
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="15" Spacing="20">

                <!-- Forecast Header -->
                <Label Text="Forecast for this Month"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="Black"/>

                <!-- Chart Placeholder -->
                <Frame BorderColor="#BFA76F"
                       CornerRadius="10"
                       Padding="10"
                       HasShadow="False"
                       BackgroundColor="White"
                       HeightRequest="220">
                    <VerticalStackLayout>
                        <Label Text="[Chart Placeholder]"
                               FontSize="14"
                               HorizontalOptions="Center"
                               VerticalOptions="CenterAndExpand"
                               TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- for revenue placeholders -->
                <Label FontSize="16" TextColor="Black">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Forecasted Revenue: " FontAttributes="Bold" TextColor="Black"/>
                            <Span Text="________" FontAttributes="Italic" TextColor="Black"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label FontSize="16" TextColor="Black">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Current Revenue: " FontAttributes="Bold" TextColor="Black"/>
                            <Span Text="________" FontAttributes="Italic" TextColor="Black"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                
                <!-- Recommendations Header -->
                <Label Text="Sales Forecasting Recommendations"
                       FontAttributes="Bold"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="#5A420B"/>

                <!-- Recommendations Box -->
                <Frame BorderColor="#E6B655"
                       BackgroundColor="#FFF9EF"
                       CornerRadius="8"
                       Padding="10"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Sales Forecasting Recommendations:"
                               FontAttributes="Bold"
                               FontSize="14"
                               TextColor="Black"/>
                        <Label Text="â€¢ Start of new School Year: This month is the usual start of a new school year. Sales regarding school supplies or snacks will be on the Rise."
                               FontSize="13"
                               TextColor="Black"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>