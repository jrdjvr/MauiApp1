<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.IncomeSummary"
             BackgroundColor="#FFFBE9">

    <Grid RowDefinitions="Auto,*">

        <!-- Top Bar -->
        <Grid BackgroundColor="#C07A2A" Padding="10" Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Title + Button -->
            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" Spacing="5">
                <Label Text="App Name"
                       FontSize="20"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Label Text="Income Summary"
                        BackgroundColor="#FFD966"
                        TextColor="#9A6E1A"
                        Padding="15,5"
                        FontAttributes="Bold"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1" Padding="20">

            <VerticalStackLayout Spacing="20">

                <!-- Today's Income Editable -->
                <Frame BackgroundColor="#FFD966"
                       CornerRadius="15"
                       Padding="15"
                       HasShadow="True">
                    <HorizontalStackLayout VerticalOptions="Center">
                        <Label Text="Today's Income:" 
                               FontAttributes="Bold" 
                               FontSize="18" 
                               TextColor="#7A5C1A"/>
                        <Entry Placeholder="Enter today's income"
                               FontSize="18"
                               TextColor="#7A5C1A"
                               Margin="10,0,0,0"
                               Keyboard="Numeric"
                               HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>
                </Frame>

                <!-- Pie Chart Placeholder -->
                <Frame BorderColor="#C07A2A" CornerRadius="10" Padding="10">
                    <!-- Replace with MAUI Chart control -->
                    <Label Text="Pie Chart Here"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Gray"/>
                </Frame>

                <!-- Items Sold -->
                <Label Text="Items Sold Today"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="#7A5C1A"/>

                <!-- Fixed Table with Borders -->
                <CollectionView>
                    <CollectionView.Header>
                        <Grid ColumnDefinitions="2*,1*,1*,1*,1.5*" Padding="5" BackgroundColor="#C07A2A">
                            <Label Text="Item Name" Grid.Column="0" TextColor="White"/>
                            <Label Text="Amount Sold" Grid.Column="1" TextColor="White" HorizontalTextAlignment="Center"/>
                            <Label Text="Total Price" Grid.Column="2" TextColor="White" HorizontalTextAlignment="Center"/>
                            <Label Text="Date Sold" Grid.Column="3" TextColor="White" HorizontalTextAlignment="Center"/>
                            <Label Text="Item Type" Grid.Column="4" TextColor="White" HorizontalTextAlignment="Center"/>
                        </Grid>
                    </CollectionView.Header>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="0">
                                <Grid ColumnDefinitions="2*,1*,1*,1*,1.5*" Padding="5" BackgroundColor="#D9B76E">
                                    <Label Text="{Binding ItemName}" Grid.Column="0"/>
                                    <Label Text="{Binding Amount}" Grid.Column="1" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Total}" Grid.Column="2" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Date}" Grid.Column="3" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding ItemType}" Grid.Column="4" HorizontalTextAlignment="Center"/>
                                </Grid>
                                <!-- Row Separator -->
                                <BoxView HeightRequest="1" Color="#C07A2A"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Blank Input Row -->
                <Grid ColumnDefinitions="2*,1*,1*,1*,1.5*" Padding="5" BackgroundColor="#EEE">
                    <Entry Placeholder="Item Name" Grid.Column="0"/>
                    <Entry Placeholder="Amount" Grid.Column="1" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                    <Entry Placeholder="Total Price" Grid.Column="2" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                    <Entry Placeholder="Date" Grid.Column="3" HorizontalTextAlignment="Center"/>
                    <Entry Placeholder="Item Type" Grid.Column="4"/>
                </Grid>

            </VerticalStackLayout>

        </ScrollView>

    </Grid>
</ContentPage>